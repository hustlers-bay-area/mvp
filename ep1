<body>
<div class="container">
  <h1>CUET Document Helper</h1>
  <h2>Instantly check &amp; validate your document uploads for CUET 2026.</h2>
  <div id="app"></div>
  <footer>
    Made for students | <a href="https://www.cuet.com/cuet-documents-required" target="_blank">CUET Official Docs</a>
  </footer>
</div>
<script crossorigin src="https://unpkg.com/react@18/umd/react.development.js"></script>
<script crossorigin src="https://unpkg.com/react-dom@18/umd/react-dom.development.js"></script>
<script>
const { useState } = React;

const docSpecs = [
  {
    title: "Passport-size Photograph",
    accept: ".jpg,.jpeg",
    formats: ["jpg","jpeg"],
    minKb: 10,
    maxKb: 200,
    desc: "Face (80%) & ears visible, white background. JPG/JPEG, 10–200kb.",
  },
  {
    title: "Signature",
    accept: ".jpg,.jpeg",
    formats: ["jpg", "jpeg"],
    minKb: 10,
    maxKb: 50,
    desc: "Clear, non-blurry, JPG/JPEG, 4–30kb.",
  },
  {
    title: "Category Certificate",
    accept: ".pdf",
    formats: ["pdf"],
    minKb: 50,
    maxKb: 300,
    desc: "SC/ST/OBC/EWS, PDF, 50–300kb.",
  },
  {
    title: "PwBD Certificate",
    accept: ".pdf",
    formats: ["pdf"],
    minKb: 50,
    maxKb: 300,
    desc: "Disability certificate, PDF, 50–300kb.",
  },
  {
    title: "Class 10/12 Marksheet",
    accept: ".pdf",
    formats: ["pdf"],
    minKb: 50,
    maxKb: 300,
    desc: "PDF, max 300kb. Upload if requested.",
  }
];

function DocCard({ spec }) {
  const [result, setResult] = useState("");
  const [resultType, setResultType] = useState("");
  function handleFile(e) {
    const file = e.target.files[0];
    if (!file) return;
    // Validate extension
    const ext = file.name.split('.').pop().toLowerCase();
    if (!spec.formats.includes(ext)) {
      setResultType("error");
      setResult("Invalid file type! Acceptable: " + spec.formats.join(", ").toUpperCase());
      return;
    }
    // Validate size
    const sizeKb = file.size / 1024;
    if (sizeKb < spec.minKb || sizeKb > spec.maxKb) {
      setResultType("error");
      setResult(`Incorrect file size! Must be ${spec.minKb}-${spec.maxKb}kb. Yours is ${sizeKb.toFixed(2)}kb.`);
      return;
    }
    setResultType("success");
    setResult("✓ Valid! Ready to upload to CUET portal.");
  }
  return (
    <div className="doc-card">
      <div className="doc-title">{spec.title}</div>
      <div className="doc-desc">{spec.desc}</div>
      <input
        type="file"
        accept={spec.accept}
        onChange={handleFile}
        style={{ display: "none" }}
        id={spec.title.replace(/\s/g,'')+"Input"}
      />
      <label htmlFor={spec.title.replace(/\s/g,'')+"Input"}>
        <button className="upload-btn">
          Choose File
        </button>
      </label>
      {result && (
        <div className={`result ${resultType}`}>{result}</div>
      )}
    </div>
  );
}

function App() {
  return (
    <div>
      {docSpecs.map(spec =>
        <DocCard key={spec.title} spec={spec} />
      )}
    </div>
  );
}

ReactDOM.createRoot(document.getElementById('app')).render(React.createElement(App));
</script>
</body>
</html>
